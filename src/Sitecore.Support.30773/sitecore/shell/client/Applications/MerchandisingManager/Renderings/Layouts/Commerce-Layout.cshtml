@using Sitecore
@using Sitecore.Commerce.UX.Merchandising
@using Sitecore.Configuration
@using Sitecore.Mvc
@using Sitecore.SecurityModel
@using Sitecore.SecurityModel.License
@model Sitecore.Mvc.Presentation.RenderingModel
<!DOCTYPE html>
<html data-sc-app>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    @{
        bool axMode = false;

        if (Html.Commerce().AXMode())
        {
            axMode = true;
        }

        var useFullWidth = (Sitecore.Context.Item["UseFullWidth"] == "1");
        var bodyClass = useFullWidth ? "sc-fullWidth" : string.Empty;

        HttpCookie cookie = new HttpCookie("commerceLang", Sitecore.Context.Language.Name);
        Response.Cookies.Add(cookie);

        HttpCookie regionalIsoCookie = new HttpCookie("commerceRegionISO", Sitecore.Context.Culture.Name);
        Response.Cookies.Add(regionalIsoCookie);


        @* the beginning of the modified part*@

    if (Sitecore.Context.RawUrl.Contains("sitecore/client/Applications/MerchandisingManager"))
    {
        string target = Sitecore.Context.Request.GetQueryString("target");

        if (!string.IsNullOrEmpty(target))
        {
            string lang = Sitecore.Context.Request.GetQueryString("lang");
            Sitecore.Globalization.Language setCookieLang = null;
            string setCookieLangCulture = null;

            if (!string.IsNullOrEmpty(lang) && Sitecore.Globalization.Language.TryParse(lang, out setCookieLang))
            {
                setCookieLangCulture = setCookieLang.CultureInfo.Name;
                cookie.Value = lang;
                Response.Cookies.Add(cookie);

                regionalIsoCookie.Value = setCookieLangCulture;
                Response.Cookies.Add(regionalIsoCookie);
            }
            else
            {
                Sitecore.Data.Items.Item itemTarget = Sitecore.Context.ContentDatabase.GetItem(Sitecore.Data.ID.Parse(target));

                do
                {
                    string defaultLanguage = itemTarget["DefaultLanguage"];

                    if (!string.IsNullOrEmpty(defaultLanguage) && Sitecore.Globalization.Language.TryParse(defaultLanguage, out setCookieLang))
                    {
                        setCookieLangCulture = setCookieLang.CultureInfo.Name;
                        cookie.Value = defaultLanguage;
                        Response.Cookies.Add(cookie);
                        regionalIsoCookie.Value = setCookieLangCulture;
                        Response.Cookies.Add(regionalIsoCookie);
                        break;
                    }
                    else
                    {
                        itemTarget = itemTarget.Parent;
                        if (itemTarget == null)
                        {
                            break;
                        }
                    }
                }
                while (itemTarget.ID.ToString() != "11111111-1111-1111-1111-111111111111");
            }
        }
    }
    @* the end of the modified part *@

    }
    @Html.Sitecore().Placeholder("Page.Stylesheets")
    @Html.Sitecore().Placeholder("Page.Code")
</head>
<body class="sc @bodyClass" data-sc-axmode="@axMode.ToString().ToLower()">
    @Html.Sitecore().InitializeSpeakLayout()
    <div class="sc-list">
        @this.Html.Sitecore().Placeholder("Page.Internal.BeforeGrid")
        <div class="container-narrow">
            @this.Html.Sitecore().Placeholder("Page.Body")
        </div>
        @this.Html.Sitecore().Placeholder("Page.Internal.AfterGrid")
    </div>
</body>
<link href="~/sitecore/shell/client/Applications/MerchandisingManager/businesstools.css" rel="stylesheet" type="text/css" />
</html>